<Window x:Class="Projeto_PEOO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projeto_PEOO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="359*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddTime" Content="Adicinar Time" HorizontalAlignment="Right" Margin="0,0,384,360" Click="AddTime_Click" Grid.Column="1" Height="20" VerticalAlignment="Bottom" Width="92"/>
        <TextBox x:Name="NomeTime" Margin="0,0,649,361" Text="Nome do Time" TextWrapping="Wrap" HorizontalAlignment="Right" Width="120" Grid.ColumnSpan="2" Height="18" VerticalAlignment="Bottom"/>
        <TextBox x:Name="EstadoTime" Margin="0,0,494,361" Text="Estado do Time" TextWrapping="Wrap" Grid.Column="1" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120"/>
        <TextBox x:Name="NomeJogador" Margin="0,0,649,302" Text="Estado do Time" TextWrapping="Wrap" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="120" Height="18" VerticalAlignment="Bottom"/>
        <TextBox x:Name="Camisa" Margin="0,0,494,302" Text="Camisa" TextWrapping="Wrap" Grid.Column="1" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120"/>
        <TextBox x:Name="Gols" Margin="0,0,344,302" TextWrapping="Wrap" Text="Gols" Grid.Column="1" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120"/>
        <Button x:Name="AddJogador" Content="Adicionar Jogador" Margin="0,0,208,301" Click="AddJogador_Click" Grid.Column="1" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="113"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,0,691,267" Text="Cadastrados" TextWrapping="Wrap" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,0,25,384" Text="Time" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <TextBlock HorizontalAlignment="Right" Margin="0,0,8,325" Text="Jogador" TextWrapping="Wrap" VerticalAlignment="Bottom" RenderTransformOrigin="0.205,0.499"/>
        <Button x:Name="Artilheiro" Content="Artilheiro" Margin="0,0,70,63" Click="artilheiro" Grid.Column="1" Height="38" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="216"/>
        <ListBox x:Name="art" Grid.Column="1" Margin="0,0,35,126" HorizontalAlignment="Right" Width="286" Height="136" VerticalAlignment="Bottom"/>
        <ListBox x:Name="list" Margin="0,0,344,30" Grid.ColumnSpan="2" Height="232" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="412"/>
    </Grid>
</Window>
